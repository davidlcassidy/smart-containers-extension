{
  "manifest_version": 2,
  "name": "Smart Containers",
  "version": "1.0.2",
  "description": "Automatically organize your tabs into isolated containers based on their domain for enhanced privacy and seamless browsing.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
	"cookies",
    "tabs",
    "storage",
	"contextualIdentities",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "dashboard.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
